{% extends 'registro/edit_layout.html.twig' %}
{% use 'registro/etapa.html.twig' %}
{% use 'registro/control.html.twig' %}

{% block title %}Editar Accidente{% endblock %}

{% block header %}
    <h1><span class="fa fa-fw fa-car-crash"></span> Registrar accidente - Peatones</h1>
{% endblock %}

{% block edit_registro %}
    {% block etapa %}{{ parent() }}{% endblock %}
    {% form_theme form _self 'registro/themes/peaton_accidente_theme.html.twig' 'registro/themes/persona_theme.html.twig' 'jquery.collection.html.twig' %}
    {{ form(form) }}
{% endblock %}

{% block accidente_widget %}
    <div class="row">
        <div class="col">
            {{ block('control') }}
            <div class="card border-primary mb-2">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex">
                        <h4 class="m-0">Formulario NÂ° {{ form.vars.value.numeroFormulario }} - {{ 'etapa.peatones'|trans }}</h4>
                    </div>
                </div>
                <div class="card-body p-2">
                    {{ form_widget(form.peatonesAccidente) }}
                </div>
            </div>
            {{ block('control') }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('peatones') }}
{% endblock %}