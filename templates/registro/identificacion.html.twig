{% extends 'registro/edit_layout.html.twig' %}
{% use 'registro/etapa.html.twig' %}
{% use 'registro/control.html.twig' %}

{% block title %}Identificación{% endblock %}

{% block header %}
    <h1><span class="fa fa-fw fa-car-crash"></span> Registrar accidente - Identificación</h1>
{% endblock %}

{% block edit_registro %}
    {% block etapa %}{{ parent() }}{% endblock %}
    {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' 'registro/themes/label_theme.html.twig' _self %}
    {{ form(form) }}
{% endblock %}

{% block accidente_widget %}
    <div class="row">
        <div class="col">
            {{ block('control') }}
            <div class="card border-primary mb-2">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex">
                        <h4 class="m-0">Formulario N° {{ form.vars.value.numeroFormulario }} - {{ 'etapa.identificacion'|trans }}</h4>
                    </div>
                </div>
                <div class="card-body p-2">
                    <div class="form-row">
                        <div class="col-md-6 pb-2">
                            <div class="card bg-info border-primary h-100">
                                <div class="card-body">
                                {{ form_row(form.numeroParte) }}
                                {{ form_row(form.fecha) }}
                                {{ form_row(form.hora) }}
                                {{ form_row(form.aclaratoria) }}
                                {{ form_row(form.concurreSiat) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 pb-2">
                            <div class="card bg-info border-primary h-100">
                                <div class="card-body">
                                {{ form_row(form.claseAccidente) }}
                                {{ form_row(form.tipoAccidente) }}
                                {{ form_row(form.funcionario) }}
                                {{ form_row(form.tribunal) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ block('control') }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('identificacion') }}
    {{ encore_entry_script_tags('organizacion') }}
    {% block flashMessages %}{{ parent() }}{% endblock %}
{% endblock %}

{% block _accidente_concurreSiat_row %}
    <div class="form-group row">
        {{- block('form_label') -}}
        <div class="{{ block('form_group_class') }}">
            {{- form_widget(form) -}}
            {{- form_help(form) -}}
            {{- form_errors(form) -}}
        </div>
    </div>
{%- endblock %}



{% block _accidente_concurreSiat_widget %}
    <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
{%- endblock %}
