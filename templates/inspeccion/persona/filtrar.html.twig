{% extends 'inspeccion/persona/layout.html.twig' %}

{% block title %}Filtrar personas{% endblock %}

{% block header %}
    <h1><span class="fa fa-fw fa-search"></span> Inspección - Filtrar personas</h1>
{% endblock %}

{% block persona %}
    <div class="row">
        <div class="col">
            <div class="card mb-2">
                <div class="card-header border-bottom-0">
                    {% set menu = knp_menu_get('inspeccionPersonas', [], {}) %}
                    {{ knp_menu_render(menu) }}
                </div>
            </div>
        </div>
    </div>

    {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' _self %}
    {{ form_start(form) }}
    <div class="row">

        <div class="col-12">
            <div class="card mb-2">
                <div class="card-header">Información personal</div>
                <div class="card-body">
                {{ form_row(form.condicionFisica) }}
                {{ form_row(form.consecuenciaPersona) }}
                {{ form_row(form.cualidadEspecial) }}
                {{ form_row(form.tipoTrayecto) }}
                {{ form_row(form.seguridad) }}
                {{ form_row(form.claseLicencia) }}
                {{ form_row(form.comunaLicencia) }}
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card mb-2">
                <div class="card-header">Información vehicular</div>
                <div class="card-body">
                {{ form_row(form.tipoVehiculo) }}
                {{ form_row(form.servicioVehiculo) }}
                {{ form_row(form.maniobraVehiculo) }}
                {{ form_row(form.direccionVehiculo) }}
                {{ form_row(form.consecuenciaVehiculo) }}
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card mb-2">
                <div class="card-header">Información territorial</div>
                <div class="card-body">
                {{ form_row(form.region) }}
                {{ form_row(form.provincia) }}
                {{ form_row(form.comuna) }}
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card mb-2">
                <div class="card-header">Información cualitativa</div>
                <div class="card-body">
                {{ form_row(form.claseAccidente) }}
                {{ form_row(form.tipoAccidente) }}
                {{ form_row(form.causaBasal) }}
                {{ form_row(form.causas) }}
                </div>
            </div>
        </div>

        <div class="col-12">
            {{ form_widget(form.submit, {attr: {'class' : 'btn btn-primary btn-block'}}) }}
        </div>

    </div>
    {{ form_rest(form) }}

{% endblock %}

{% block form_label_class -%}col-sm-2 text-md-right{%- endblock form_label_class %}

{% block form_group_class -%}col-sm-10{%- endblock form_group_class %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('inspeccion') }}
{% endblock %}
