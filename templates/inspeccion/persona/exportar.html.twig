{% extends 'inspeccion/persona/layout.html.twig' %}

{% block title %}Exportar búsqueda de personas{% endblock %}

{% block header %}
    <h1><span class="fa fa-fw fa-search"></span> Inspección - Exportar búsqueda de personas</h1>
{% endblock %}

{% block persona %}
    <div class="row">
        <div class="col">
            <div class="card mb-2">
                <div class="card-header">
                    {% set menu = knp_menu_get('inspeccionPersonas', [], {}) %}
                    {{ knp_menu_render(menu) }}
                </div>
                <div class="card-body">
                    {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' _self %}
                    {{ form_start(form) }}
                    <div class="form-row">
                        <div class="col-xl-12">
                            {{ form_row(form.submit) }}
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-xl-4">

                            <div class="card mb-2">
                                <div class="card-header">Información personal</div>
                                <div class="card-body">
                                {{ form_row(form.run) }}
                                {{ form_row(form.nombres) }}
                                {{ form_row(form.apellidoPaterno) }}
                                {{ form_row(form.apellidoMaterno) }}
                                {{ form_row(form.ocupacion) }}
                                {{ form_row(form.genero) }}
                                {{ form_row(form.estadoCivil) }}
                                {{ form_row(form.nacionalidad) }}
                                {{ form_row(form.lugarNacimiento) }}
                                {{ form_row(form.fechaNacimiento) }}
                                </div>
                            </div>

                            <div class="card mb-2">
                                <div class="card-header">Situación personal</div>
                                <div class="card-body">
                                {{ form_row(form.edad) }}
                                {{ form_row(form.calidadPersona) }}
                                {{ form_row(form.claseLicencia) }}
                                {{ form_row(form.comunaLicencia) }}
                                {{ form_row(form.condicionFisica) }}
                                {{ form_row(form.consecuenciaPersona) }}
                                {{ form_row(form.cualidadEspecial) }}
                                {{ form_row(form.tipoTrayecto) }}
                                {{ form_row(form.seguridad) }}
                                {{ form_row(form.personaEsCausanteProbable) }}
                                {{ form_row(form.personaSeFuga) }}
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-4">
                            <div class="card mb-2">
                                <div class="card-header">Información vehicular</div>
                                <div class="card-body">
                                {{ form_row(form.placaPatenteUnica) }}
                                {{ form_row(form.marcaVehiculo) }}
                                {{ form_row(form.modeloVehiculo) }}
                                {{ form_row(form.ano) }}
                                {{ form_row(form.color) }}
                                {{ form_row(form.tipoVehiculo) }}
                                </div>
                            </div>

                            <div class="card mb-2">
                                <div class="card-header">Situación vehicular</div>
                                <div class="card-body">
                                {{ form_row(form.direccionVehiculo) }}
                                {{ form_row(form.servicioVehiculo) }}
                                {{ form_row(form.maniobraVehiculo) }}
                                {{ form_row(form.consecuenciaVehiculo) }}
                                {{ form_row(form.vehiculoEsCausanteProbable) }}
                                {{ form_row(form.vehiculoSeFuga) }}
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-4">
                            <div class="card mb-2">
                                <div class="card-header">Información del accidente</div>
                                <div class="card-body">
                                {{ form_row(form.id) }}
                                {{ form_row(form.fecha) }}
                                {{ form_row(form.hora) }}
                                {{ form_row(form.claseAccidente) }}
                                {{ form_row(form.tipoAccidente) }}
                                {{ form_row(form.causaBasal) }}
                                {{ form_row(form.creado) }}
                                {{ form_row(form.actualizado) }}
                                </div>
                            </div>

                            <div class="card mb-2">
                                <div class="card-header">Información territorial</div>
                                <div class="card-body">
                                {{ form_row(form.region) }}
                                {{ form_row(form.provincia) }}
                                {{ form_row(form.comuna) }}
                                </div>
                            </div>
                        </div>

{#}

                        <div class="col-xl-4">
                            <div class="card mb-2">
                                <div class="card-header">Información relativa</div>
                                <div class="card-body">
                                {{ form_row(form.tipoDireccion) }}
                                {{ form_row(form.tipoUbicacionRelativaAccidente) }}
                                {{ form_row(form.tipoZonaAccidente) }}
                                </div>
                            </div>
                        </div>
{#}

{#}
                        <div class="col-xl-4">
                            <div class="card mb-2">
                                <div class="card-header">Información espacial</div>
                                <div class="card-body">
                                {{ form_row(form.glosa) }}
                                {{ form_row(form.calle) }}
                                {{ form_row(form.numero) }}
                                {{ form_row(form.direccion) }}
                                {{ form_row(form.latitud) }}
                                {{ form_row(form.longitud) }}
                                {{ form_row(form.maestroId) }}
                                {{ form_row(form.tipoId) }}
                                {{ form_row(form.tipo) }}
                                {{ form_row(form.pais) }}
                                {{ form_row(form.comuna) }}
                                </div>
                            </div>

                        </div>
{#}
                    </div>
                    {{ form_rest(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block form_label_class -%}col-sm-0{%- endblock form_label_class %}

{% block form_group_class -%}col-sm-12{%- endblock form_group_class %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('inspeccion') }}
{% endblock %}
