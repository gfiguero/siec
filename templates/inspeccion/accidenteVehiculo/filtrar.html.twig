{% extends 'inspeccion/accidenteVehiculo/layout.html.twig' %}

{% block title %}Filtrar accidentes{% endblock %}

{% block header %}
    <h1><span class="fa fa-fw fa-search"></span> Inspección - Filtrar accidentes por vehículos</h1>
{% endblock %}

{% block accidente %}
    <div class="row">
        <div class="col">
            <div class="card mb-2">
                <div class="card-header border-bottom-0">
                    {% set menu = knp_menu_get('inspeccionAccidentesVehiculos', [], {}) %}
                    {{ knp_menu_render(menu) }}
                </div>
            </div>
        </div>
    </div>

    {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' _self %}
    {{ form_start(form) }}
    <div class="row">

        <div class="col-12">
            <button type="submit" class="btn btn-primary btn-block btn mb-2 btn-lg">Aplicar Filtro</button>
        </div>

        <div class="col-12">
            <div class="card mb-2">
                <div class="card-header">Rangos</div>
                <div class="card-body">
                    <div class="row d-flex justify-content-center">
                        <div class="col-xl-5">
                            <table class="table table-sm table-borderless">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Mínimo</th>
                                        <th>Máximo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Fecha</td>
                                        <td>{{ form_widget(form.fechaMin) }}</td>
                                        <td>{{ form_widget(form.fechaMax) }}</td>
                                    </tr>
                                    <tr>
                                        <td>Hora</td>
                                        <td>{{ form_widget(form.horaMin) }}</td>
                                        <td>{{ form_widget(form.horaMax) }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card mb-2">
                <div class="card-header">Información territorial</div>
                <div class="card-body">
                {{ form_row(form.region) }}
                {{ form_row(form.provincia) }}
                {{ form_row(form.comuna) }}
                {{ form_row(form.cuadrante) }}
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card mb-2">
                <div class="card-header">Información cualitativa</div>
                <div class="card-body">
                {{ form_row(form.claseAccidente) }}
                {{ form_row(form.tipoAccidente) }}
                {{ form_row(form.tipoCausa) }}
                {{ form_row(form.causaBasal) }}
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card mb-2">
                <div class="card-header">Información vehicular</div>
                <div class="card-body">
                {{ form_row(form.tipoVehiculo) }}
                {{ form_row(form.servicioVehiculo) }}
                {{ form_row(form.maniobraVehiculo) }}
                {{ form_row(form.direccionVehiculo) }}
                {{ form_row(form.consecuenciaVehiculo) }}
                </div>
            </div>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary btn-block btn mb-2 btn-lg">Aplicar Filtro</button>
        </div>

    </div>
    {{ form_rest(form) }}

{% endblock %}

{% block form_label_class -%}col-sm-2 text-md-right{%- endblock form_label_class %}

{% block form_group_class -%}col-sm-10{%- endblock form_group_class %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('inspeccion') }}
{% endblock %}
