{% extends 'inspeccion/accidenteVehiculo/layout.html.twig' %}

{% block title %}Exportar búsqueda{% endblock %}

{% block header %}
    <h1><span class="fa fa-fw fa-search"></span> Inspección - Exportar búsqueda de accidentes por vehículo</h1>
{% endblock %}

{% block accidente %}
    <div class="row">
        <div class="col">
            <div class="card mb-2">
                <div class="card-header">
                    {% set menu = knp_menu_get('inspeccionAccidentesUnidades', [], {}) %}
                    {{ knp_menu_render(menu) }}
                </div>

                <div class="card-body">
                    {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' _self %}
                    {{ form_start(form) }}
                    <div class="form-row">
                        <div class="col">
                            {{ form_row(form.submit) }}
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-xl-4">
                            <div class="card mb-2">
                                <div class="card-header">Información temporal</div>
                                <div class="card-body">
                                {{ form_row(form.id) }}
                                {{ form_row(form.fecha) }}
                                {{ form_row(form.hora) }}
                                </div>
                            </div>
                            <div class="card mb-2">
                                <div class="card-header">Información geográfica</div>
                                <div class="card-body">
                                {{ form_row(form.cuadrante) }}
                                {{ form_row(form.comuna) }}
                                {{ form_row(form.provincia) }}
                                {{ form_row(form.region) }}
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-4">
                            <div class="card mb-2">
                                <div class="card-header">Ubicación</div>
                                <div class="card-body">
                                {{ form_row(form.glosa) }}
                                {{ form_row(form.calle) }}
                                {{ form_row(form.numero) }}
                                {{ form_row(form.direccion) }}
                                {{ form_row(form.latitud) }}
                                {{ form_row(form.longitud) }}
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-4">
                            <div class="card mb-2">
                                <div class="card-header">Institucional</div>
                                <div class="card-body">
                                {{ form_row(form.unidad) }}
                                {{ form_row(form.funcionario) }}
                                {{ form_row(form.numeroParte) }}
                                {{ form_row(form.numeroFormulario) }}
                                {{ form_row(form.esMensaje) }}
                                {{ form_row(form.concurreSiat) }}
                                {{ form_row(form.estadoAccidente) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_rest(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block form_label_class -%}col-sm-0{%- endblock form_label_class %}

{% block form_group_class -%}col-sm-12{%- endblock form_group_class %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('inspeccion') }}
{% endblock %}
