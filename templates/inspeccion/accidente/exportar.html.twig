{% extends 'inspeccion/accidente/layout.html.twig' %}

{% block title %}Exportar búsqueda{% endblock %}

{% block header %}
    <h1><span class="fa fa-fw fa-search"></span> Inspección - Exportar búsqueda</h1>
{% endblock %}

{% block accidente %}
    <div class="row">
        <div class="col">
            <div class="card mb-2">
                <div class="card-header">
                    {% set menu = knp_menu_get('inspeccionAccidentes', [], {}) %}
                    {{ knp_menu_render(menu) }}
                </div>
{#}                <div class="card-body">{#}
{#}                    <dl class="form-row">{#}
{#}                        {{ block('filtro') }}{#}
{#}                    </dl>{#}
{#}                </div>{#}
                <div class="card-body">
                    {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' _self %}
                    {{ form_start(form) }}
                    <div class="form-row">
                        <div class="col">
                            {{ form_row(form.submit) }}
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-xl-4">
                            <div class="card mb-2">
                                <div class="card-header">Información temporal</div>
                                <div class="card-body">
                                {{ form_row(form.id) }}
                                {{ form_row(form.fecha) }}
                                {{ form_row(form.hora) }}
                                </div>
                            </div>
                            <div class="card mb-2">
                                <div class="card-header">Información geográfica</div>
                                <div class="card-body">
                                {{ form_row(form.cuadrante) }}
                                {{ form_row(form.comuna) }}
                                {{ form_row(form.provincia) }}
                                {{ form_row(form.region) }}
                                </div>
                            </div>
                            <div class="card mb-2">
                                <div class="card-header">Información institucional</div>
                                <div class="card-body">
                                {{ form_row(form.unidad) }}
                                {{ form_row(form.funcionario) }}
                                {{ form_row(form.tribunal) }}
                                {{ form_row(form.numeroParte) }}
                                {{ form_row(form.numeroFormulario) }}
                                {{ form_row(form.concurreSiat) }}
                                {{ form_row(form.esMensaje) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4">
                            <div class="card mb-2">
                                <div class="card-header">Información cuantitativa</div>
                                <div class="card-body">
                                {{ form_row(form.cantidadPistasIda) }}
                                {{ form_row(form.cantidadPistasRegreso) }}
                                {{ form_row(form.vehiculosAccidente) }}
                                {{ form_row(form.pasajerosAccidente) }}
                                {{ form_row(form.peatonesAccidente) }}
                                {{ form_row(form.personasAccidente) }}
                                {{ form_row(form.fallecidosAccidente) }}
                                {{ form_row(form.gravesAccidente) }}
                                {{ form_row(form.menosGravesAccidente) }}
                                {{ form_row(form.levesAccidente) }}
                                {{ form_row(form.ilesosAccidente) }}
                                {{ form_row(form.seIgnoraAccidente) }}
                                </div>
                            </div>
                            <div class="card mb-2">
                                <div class="card-header">Maestro de calles</div>
                                <div class="card-body">
                                {{ form_row(form.glosa) }}
                                {{ form_row(form.calle) }}
                                {{ form_row(form.numero) }}
                                {{ form_row(form.direccion) }}
                                {{ form_row(form.latitud) }}
                                {{ form_row(form.longitud) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4">
                            <div class="card mb-2">
                                <div class="card-header">Información cualitativa</div>
                                <div class="card-body">
                                {{ form_row(form.tipoDireccion) }}
                                {{ form_row(form.tipoUbicacionRelativaAccidente) }}
                                {{ form_row(form.tipoZonaAccidente) }}

                                {{ form_row(form.claseAccidente) }}
                                {{ form_row(form.tipoAccidente) }}
                                {{ form_row(form.causaBasal) }}
                                {{ form_row(form.tipoCausa) }}

                                {{ form_row(form.estadoAccidente) }}
                                {{ form_row(form.registroEtapas) }}
                                {{ form_row(form.incoherencias) }}

                                {{ form_row(form.estadoAtmosferico) }}
                                {{ form_row(form.tipoLuminosidad) }}
                                {{ form_row(form.estadoLuzArtificial) }}
                                {{ form_row(form.tipoPavimentoCalzada) }}
                                {{ form_row(form.condicionPavimentoCalzada) }}
                                {{ form_row(form.estadoPavimentoCalzada) }}
                                {{ form_row(form.tipoCalzada) }}
                                {{ form_row(form.demarcacionLineaCalzada) }}
                                {{ form_row(form.demarcacionPrioridadCalzada) }}
                                {{ form_row(form.elementosCalzada) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_rest(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block form_label_class -%}col-sm-0{%- endblock form_label_class %}

{% block form_group_class -%}col-sm-12{%- endblock form_group_class %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('inspeccion') }}
{% endblock %}
