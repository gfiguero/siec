{% extends 'usuario/layout.html.twig' %}

{% block usuario %}
    <div class="row">
        <div class="col">
            <div class="card border-primary mb-2">
                <div class="card-header bg-primary text-white"><h4>Nuevo Usuario</h4></div>
                <div class="card-body">
                    {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' _self %}
                    {{ form_start(form) }}
                        {{ form_row(form.username) }}
                        {{ form_row(form.password) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.funcionario.codigo) }}
                        {{ form_row(form.funcionario.nombres) }}
                        {{ form_row(form.funcionario.apellidoPaterno) }}
                        {{ form_row(form.funcionario.apellidoMaterno) }}
                        {{ form_row(form.funcionario.email) }}
                        {{ form_row(form.funcionario.telefono) }}
                        {{ form_row(form.funcionario.gradoCarabinero) }}
                        {{ form_row(form.funcionario.unidad) }}
                    {{ form_rest(form) }}
                </div>
            </div>
            <button type="submit" class="btn btn-primary">{{ button_label|default('Guardar Cambios y Continuar') }} <span class="fa fa-arrow-right"></span></button>
        </div>
    </div>
{% endblock %}

{% block form_label_class -%}col-sm-4{%- endblock form_label_class %}

{% block form_group_class -%}col-sm-8{%- endblock form_group_class %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}